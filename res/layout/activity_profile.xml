<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#99CCFF"
    tools:context="nl.saxion.spookystoriestweets.ProfileActivity" >

    <LinearLayout
        android:id="@+id/llBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="5dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/profile" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvProfileScreenName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Case"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvProfileTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="testcase"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#66B2FF">

        <TextView
            android:id="@+id/tvTweetCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingRight="12dp"
            android:text="0\nTweets" />

        <TextView
            android:id="@+id/tvFollowingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingRight="12dp"
            android:text="0\nFollowing" />

        <TextView
            android:id="@+id/tvFollowersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="0\nFollowers" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66B2FF" >

    </LinearLayout>

    <ListView
        android:id="@+id/lvTimeLine"
        android:layout_width="fill_parent"
        android:layout_height="210dp" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/etPostTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonPostTweet"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tweet!" />

    </LinearLayout>

</LinearLayout>
